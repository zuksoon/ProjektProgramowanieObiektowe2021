<Window x:Class="EKantor.Wplac"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EKantor"
        mc:Ignorable="d"
        Title="Wplac" Height="300" Width="500">
    <Grid>
        <Label Content="Obecnie wolnych środków:" HorizontalAlignment="Left" Margin="63,62,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="TextBoxWolneSrodki" HorizontalAlignment="Left" Margin="267,66,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="16" TextChanged="TextBoxWolneSrodki_TextChanged"/>
        <Label Content="Ile chcesz wpłacić? " HorizontalAlignment="Left" Margin="135,112,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="TextBoxIleWplacic" HorizontalAlignment="Left" Margin="164,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="18"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="342,220,0,0" VerticalAlignment="Top" FontSize="20" Width="77" Click="btnOK_Click"/>
        <Button x:Name="btnAnuluj" Content="Anuluj" HorizontalAlignment="Left" Margin="85,220,0,0" VerticalAlignment="Top" FontSize="20" Width="77" Click="btnAnuluj_Click"/>

    </Grid>
</Window>
